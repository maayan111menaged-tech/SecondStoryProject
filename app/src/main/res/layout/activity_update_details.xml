<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".screens.updateDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- כותרת גדולה -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bigTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/noot"
                android:text="ניהול"
                android:textColor="#36b3b8"
                android:textSize="23pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bigTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/noot"
                android:text="ניהול"
                android:textColor="@color/black"
                android:textSize="23pt"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- תת־כותרת -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">

            <TextView
                android:id="@+id/littleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/akitrg__"
                android:text="חשבון"
                android:textColor="@color/black"
                android:textSize="23pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/littleTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-3dp"
                android:layout_marginTop="-3dp"
                android:fontFamily="@font/akitrg__"
                android:text="חשבון"
                android:textColor="#36b3b8"
                android:textSize="23pt"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- כרטיס מידע -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="פרטים אישיים"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="right"/>

                <!-- שדה שם משתמש -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInput_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="שם משתמש"
                    android:maxWidth="488dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/black"            >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/usernameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- שם פרטי + משפחה -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl">

                    <!-- שדה שם פרטי -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/firstnameInput_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="שם פרטי"
                        android:maxWidth="488dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"            >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/firstnameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- הרווח האוטומטי -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"/>

                    <!-- שדה שם משפחה -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lastnameInput_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:hint="שם משפחה"
                        android:maxWidth="488dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"            >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lastnameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- שדה אימייל -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInput_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="אימייל"
                    android:maxWidth="488dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/black"            >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- שדה מספר טלפון -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phonenumberInput_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="מספר טלפון"
                    android:maxWidth="488dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/black"            >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phonenumberInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@android:color/black"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- שדה תאריך -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateInput_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="תאריך לידה"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_gravity="center"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconContentDescription="בחר תאריך"
                    android:textColorHint="@color/black"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:textColor="@android:color/black"
                        android:paddingEnd="10dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- שדה סיסמה -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInput_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="סיסמה"
                    android:maxWidth="488dp"
                    android:layout_gravity="center"
                    app:endIconMode="password_toggle"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/black"            >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- כפתור למטה -->
                <Button
                    android:id="@+id/btn_updateDetails_toHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#36b3b8"
                    android:fontFamily="@font/akitrg__"
                    android:text="עידכון פרטים"
                    android:textColor="@color/black"
                    android:textSize="15pt"/>
                <!--app:icon="@android:drawable/ic_menu_save"-->


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
