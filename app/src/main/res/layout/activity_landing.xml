<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.LandingActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/book_background_pic2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/littleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/akitrg__"
                    android:text="מעניקים לחפצים"
                    android:textColor="@color/black"
                    android:textSize="23pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/littleTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/akitrg__"
                    android:text="מעניקים לחפצים"
                    android:textColor="#36b3b8"
                    android:textSize="23pt"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bigTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/noot"
                    android:text="סיפור שני"
                    android:textColor="#36b3b8"
                    android:textSize="23pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bigTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/noot"
                    android:text="סיפור שני"
                    android:textColor="@color/black"
                    android:textSize="23pt"
                    android:textStyle="bold" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_Landing_toSignUp"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:backgroundTint="#36b3b8"
                android:fontFamily="@font/akitrg__"
                android:text="הרשמה"
                android:textColor="@color/black"
                android:textSize="15pt" />

            <Button
                android:id="@+id/btn_Landing_toLogin"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#36b3b8"
                android:fontFamily="@font/akitrg__"
                android:text="כניסה למשתמש קיים"
                android:textColor="@color/black"
                android:textSize="15pt" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>