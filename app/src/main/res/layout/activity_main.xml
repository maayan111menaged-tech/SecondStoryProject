<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"
    tools:context=".screens.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">


        <!-- Toolbar עם לוגו -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <!-- הלוגו בתוך Toolbar -->
            <ImageView
                android:id="@+id/toolbarLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@mipmap/ic_launcher"/>
        </androidx.appcompat.widget.Toolbar>

        <!-- תוכן ראשי -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- כותרות -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/littleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/akitrg__"
                        android:text="מעניקים לחפצים"
                        android:textColor="@color/black"
                        android:textSize="23pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/littleTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-3dp"
                        android:layout_marginTop="-3dp"
                        android:fontFamily="@font/akitrg__"
                        android:text="מעניקים לחפצים"
                        android:textColor="#36b3b8"
                        android:textSize="23pt"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/bigTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/noot"
                        android:text="סיפור שני"
                        android:textColor="#36b3b8"
                        android:textSize="23pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bigTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-5dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/noot"
                        android:text="סיפור שני"
                        android:textColor="@color/black"
                        android:textSize="23pt"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- כפתורים -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_addDonation"
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:text="הוספת תרומה"
                        android:textSize="11pt"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/akitrg__"
                        android:backgroundTint="#36b3b8"
                        app:icon="@drawable/baseline_add_circle_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="30dp"
                        app:iconTint="#144244"/>

                    <!-- רווח אוטומטי -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_searchDonation"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:text="חיפוש תרומה"
                        android:textSize="11pt"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/akitrg__"
                        android:backgroundTint="#36b3b8"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="30dp"
                        app:iconTint="#144244"/>
                </LinearLayout>

                <!-- מפה placeholder -->
                <View
                    android:id="@+id/view_ForMap"
                    android:layout_width="350dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#36b3b8"/>

                <!-- דרגות -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layoutDirection="rtl"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/currentRateIcon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_bronze"
                        android:contentDescription="Current Rate Icon"/>

                    <ProgressBar
                        android:id="@+id/rateProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:layoutDirection="rtl"
                        android:progress="0"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_style"/>

                    <ImageView
                        android:id="@+id/nextRateIcon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_silver"
                        android:contentDescription="Next Rate Icon"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- ===== Navigation Drawer ===== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

</androidx.drawerlayout.widget.DrawerLayout>
